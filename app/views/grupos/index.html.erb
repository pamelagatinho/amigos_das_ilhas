<p id="notice">
  <%= notice %>
</p>

  <div class="panel panel-default">
    <div class="panel-heading">Lista dos grupos</div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @grupos.each do |grupo| %>
            <tr>
              <td><%= grupo.nome %></td>
              <td><%= link_to 'Exibir', grupo %></td>
              <td><%= link_to 'Editar', edit_grupo_path(grupo) %></td>
              <td><%= link_to 'Excluir', grupo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
    
    <br>

    <button type="button" class="btn btn-lg btn-default">
      <%= link_to 'Incluir Novo Grupo', new_grupo_path %>
    </button>
  </div>  

